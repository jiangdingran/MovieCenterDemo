<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/comment_img1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/photos"
        android:layout_margin="35dp"
        />
    <TextView
        android:id="@+id/comment_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123"
        android:textSize="15dp"
        android:layout_toRightOf="@id/comment_img1"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="2dp"
        />
    <TextView
        android:id="@+id/comment_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123"
        android:textSize="15dp"
        android:layout_toRightOf="@id/comment_img1"
        android:layout_below="@id/comment_tv1"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="2dp"
        />
    <TextView
        android:id="@+id/comment_tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123"
        android:textSize="20dp"
        android:layout_toRightOf="@id/comment_img1"
        android:layout_below="@id/comment_tv2"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="2dp"
        />
    <TextView
        android:id="@+id/comment_tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 0 | 分享 | 举报"
        android:layout_alignParentRight="true"
        android:layout_marginTop="35dp"
        android:layout_marginRight="35dp"

        />
    <ImageView
        android:id="@+id/comment_img2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/like"
        android:layout_toLeftOf="@id/comment_tv4"
        android:layout_alignBottom="@id/comment_tv4"
        android:layout_marginRight="3dp"
        />
</RelativeLayout>
